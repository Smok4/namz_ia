# Variables d'environnement pour développement
# NE PAS COMMITER CE FICHIER EN PRODUCTION

# Secret key généré pour développement (générer nouvelle clé avec: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=dev-key-non-securise-change-moi-en-production

# Base de données
DATABASE_URL=sqlite:///instance/namz_ia.db

# Configuration Flask (utiliser FLASK_DEBUG au lieu de FLASK_ENV pour Flask 2.3+)
FLASK_DEBUG=1

# CORS - Origines autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000,http://127.0.0.1:5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/namz_ia.log

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Session
SESSION_TIMEOUT=3600
MAX_CONTENT_LENGTH=10000

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
