# Namz IA - Configuration Environnement
# Copier ce fichier vers .env et remplir avec vos valeurs

# Flask Secret Key (générer avec: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=changez-cette-cle-en-production

# Base de données
DATABASE_URL=sqlite:///instance/namz_ia.db

# Configuration Flask
FLASK_ENV=development
FLASK_DEBUG=True

# API Keys (si nécessaire)
API_KEY=

# CORS - Origines autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/namz_ia.log

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Session
SESSION_TIMEOUT=3600
MAX_CONTENT_LENGTH=10000

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
